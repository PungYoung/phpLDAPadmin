{
	"title": "Generic: Mail Account",
	"description": "New Mail Account",
	"enabled": true,
	"icon": "fa-at",
	"rdn": "cn",
	"regexp": "/^ou=.+,?/",

	"objectclasses": [
		"inetOrgPerson"
	],

	"attributes": {
		"mail": {
			"display": "Email (mail)",
			"order": 1,
			"onchange": [
				"=autoFill(cn;%mail|0-0/k|@%)",
				"=autoFill(description;%mail|1-0/k|@%)"
			]
		},
		"givenName": {
			"display": "First Name",
			"onchange": [
				"=autoFill(cn;%givenName% %sn/U%)",
				"=autoFill(uid;%givenName|0-1/l%%sn/l%)"
			],
			"order": 3
		},
		"sn": {
			"display": "Last Name",
			"onchange": [
				"=autoFill(cn;%givenName% %sn/U%)",
				"=autoFill(uid;%givenName|0-1/l%%sn/l%)"
			],
			"order": 4
		},
		"cn": {
			"display": "Common Name",
			"readonly": true,
			"order": 2
		},
		"description": {
			"display": "Description",
			"order": 5
		}
	}
}
